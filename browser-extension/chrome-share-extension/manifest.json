{
    "manifest_version": 2,
    "name": "學呀 | Zetria | 分享資源",
    "description": "一鍵分享網站至學呀",
    "version": "1.1.3",
    "icons": {
        "128": "icon_128.png" 
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab", 
        "webRequest"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["popup.js"]
        }
    ]
}